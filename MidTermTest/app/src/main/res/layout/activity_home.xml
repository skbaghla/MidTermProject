<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <TextView
        android:layout_width="wrap_content"
        android:text="Login "
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="28sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/txtLogin"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="100dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/icon_launcher"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtLogin"
        android:id="@+id/imglogo"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="100dp" />

    <com.google.android.material.textfield.TextInputLayout
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/white"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/imglogo"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:id="@+id/ltUsername"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:id="@+id/edtUsername"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:hint="Username"
            android:textAllCaps="false"

            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <View
        android:layout_width="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ltUsername"
        android:layout_margin="12dp"
        android:background="#CACACA"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/viewLine"
        android:layout_height="1dp" />
    <com.google.android.material.textfield.TextInputLayout
        android:background="@color/white"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:id="@+id/ltPwd"
        android:layout_marginRight="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewLine"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:id="@+id/edtPwd"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:layout_marginLeft="12dp"
            android:inputType="textPassword"
            android:layout_marginRight="12dp"
            android:hint="Password"
            android:textAllCaps="false"

            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>
    <View
        android:layout_width="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ltPwd"
        android:layout_margin="12dp"
        android:background="#CACACA"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/viewLinepwd"
        android:layout_height="1dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewLinepwd"
        android:layout_marginTop="40dp"
        android:id="@+id/btnLogin"
        android:text="Login"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:textAllCaps="false"
        android:background="@drawable/bkg_button"
        android:textColor="@color/white"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/txtOr"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLogin"
        android:layout_marginTop="20dp"
        android:text="Or"
        android:textColor="#636060"
        android:layout_height="wrap_content" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtOr"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:id="@+id/btnRegister"
        android:text="Register"
        app:layout_goneMarginTop="30dp"
        android:textAllCaps="false"
        android:background="@drawable/bkg_button"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        android:textColor="@color/white"
        android:layout_height="wrap_content" />

    <androidx.appcompat.widget.SwitchCompat
        android:layout_width="wrap_content"
        android:id="@+id/switchButtons"
        android:layout_marginRight="20dp"
        android:checked="true"
        android:text="On"
        app:layout_constraintTop_toBottomOf="@+id/btnRegister"
        android:layout_marginTop="20dp"
        app:layout_constraintRight_toRightOf="parent"

        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>